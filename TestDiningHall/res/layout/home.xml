<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBE1F4"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="UCLA Dining Hall Application" />
    
   <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textSize="30sp"
        android:text="Dine on the Hill" />
  
 	<LinearLayout
 	    android:layout_width="fill_parent"
 	    android:layout_height="0dp"
 	    android:layout_weight="2.4" >

 		<TextView
 		    android:id="@+id/textView4"
 		    android:layout_width="0dp"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="1"
 		    android:text="" />
 	    
 	    <TextView
 		    android:id="@+id/textView4"
 		    android:layout_width="0dp"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="2"
 		    android:text="" />
 	    
 	    <TextView
 		    android:id="@+id/textView4"
 		    android:layout_width="0dp"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="1"
 		    android:text="" />

 	</LinearLayout>
  	
 	<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="2.5" >

 		<TextView
 		    android:id="@+id/textView5"
 		    android:layout_width="0dp"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="1"
 		    android:text="" />

 		<TextView
 		    android:id="@+id/home_textView"
 		    android:layout_width="0dp"
 		    android:layout_height="fill_parent"
 		    android:layout_weight="8"
 		    android:background="#ffffffff"
 		    android:text="" />

 		<TextView
 		    android:id="@+id/textView7"
 		    android:layout_width="0dp"
 		    android:layout_height="wrap_content"
 		    android:layout_weight="1"
 		    android:text="" />

  	</LinearLayout>
  	
 	<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="3.1" >

 		<ImageView
 		    android:id="@+id/imageView1"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:src="@drawable/home_bear3" />

  	</LinearLayout>
 	
   <LinearLayout
       android:id="@+id/linearLayout1"
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:layout_weight="1.2" >
       
       <Button
           android:id="@+id/home_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#fffdfd70"
           android:text="@string/home"
           android:textColor="#ff000000"
           android:textSize="15sp"
           android:textStyle="bold" />

        <Button
             android:id="@+id/diningHall_button"
             android:layout_width="0dp"
             android:layout_height="fill_parent"
             android:layout_weight="24"
             android:background="#FFFFB2"
             android:text="@string/halls"
             android:textColor="#ff000000"
             android:textSize="13sp"
             android:textStyle="bold" />

        <Button
           android:id="@+id/meal_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#FFFFB2"
           android:text="@string/meals"
           android:textColor="#ff000000"
           android:textSize="13sp"
           android:textStyle="bold" />

       
<!--  
   		<Button
           android:id="@+id/allMenu_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#FFFFB2"
           android:text="@string/all_dishes"
           android:textColor="#ff000000"
           android:textSize="13sp"
           android:textStyle="bold" /> 
           -->

       <Button
           android:id="@+id/favorite_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#FFFFB2"
           android:text="@string/favorites"
           android:textColor="#ff000000"
           android:textSize="13sp"
           android:textStyle="bold" />
   </LinearLayout>

    
</LinearLayout>