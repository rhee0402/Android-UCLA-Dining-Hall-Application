<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBE1F4"
    android:orientation="vertical" >

    
        <!-- Search part of xml file -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:layout_weight="0.9" 
        android:background="#ffffffff">

        <EditText
            android:id="@+id/search_editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/search_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="#ff000000"
            android:textColor="#ffffffff"
            android:text="search" />

    </LinearLayout>
    
    <!-- Top 3 Buttons for Meal Screen -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        
        
        <Button
            android:id="@+id/all_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="#ff0079c9"
            android:textColor="#ffffffff"
            android:text="All" />
        
         <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:background="#ff004a7b"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text="" />
        
        
        
        <Button
            android:id="@+id/breakfast_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="#ff005187"
            android:textColor="#ffffffff"
            android:text="Breakfast" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:background="#ff004a7b"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:text="" />

        <Button
            android:id="@+id/lunch_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="#ff005187"
            android:textColor="#ffffffff"
            android:text="Lunch" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff004a7b"
            android:layout_weight="0.05"
            android:text="" />

        <Button
            android:id="@+id/dinner_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.2"
            android:background="#ff005187"
            android:textColor="#ffffffff"
            android:text="Dinner" />
        
                <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#ff004a7b"
            android:layout_weight="0.05"
            android:text="" />

    </LinearLayout>
     <!-- End of Top 3 Buttons for Meal Screen -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
         android:layout_weight="7.1" >
	 	<!-- List of MenuList began here  -->
         <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>       
        <!-- List of MenuList end here  -->  
    </LinearLayout>

    
     
    
    
 <!-- Start of Bottom 4 buttons  -->

<LinearLayout
       android:id="@+id/linearLayout1"
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:layout_weight="1.2" >
         
    <Button
           android:id="@+id/home_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#FFFFB2"
           android:text="@string/home"
           android:textColor="#ff000000"
           android:textSize="13sp"
           android:textStyle="bold" />

        <Button
             android:id="@+id/diningHall_button"
             android:layout_width="0dp"
             android:layout_height="fill_parent"
             android:layout_weight="24"
             android:background="#FFFFB2"
             android:text="@string/halls"
             android:textColor="#ff000000"
             android:textSize="13sp"
             android:textStyle="bold" />

        <Button
           android:id="@+id/meal_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#fffdfd70"
           android:text="@string/meals"
           android:textColor="#ff000000"
           android:textSize="15sp"
           android:textStyle="bold" />

       
<!--  
   		<Button
           android:id="@+id/allMenu_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#FFFFB2"
           android:text="@string/all_dishes"
           android:textColor="#ff000000"
           android:textSize="13sp"
           android:textStyle="bold" />
-->

       <Button
           android:id="@+id/favorite_button"
           android:layout_width="0dp"
           android:layout_height="fill_parent"
           android:layout_weight="24"
           android:background="#FFFFB2"
           android:text="@string/favorites"
           android:textColor="#ff000000"
           android:textSize="13sp"
           android:textStyle="bold" />
   </LinearLayout>
 <!-- End of Bottom 4 buttons  -->

</LinearLayout>
